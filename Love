    <script>
        // Display current date
        const currentDate = new Date();
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById('currentDate').textContent = currentDate.toLocaleDateString('en-US', options);

        // Make habit items clickable
        document.querySelectorAll('.habit-item').forEach(item => {
            item.addEventListener('click', function() {
                this.classList.toggle('completed');
            });
        });

        // Add interactivity to task rows
        document.querySelectorAll('.task-table tbody tr').forEach(row => {
            row.addEventListener('click', function() {
                // You can add more functionality here
                console.log('Task clicked:', row.cells[0].textContent);
            });
        });

        // Dynamic progress calculation
        function updateOverallProgress() {
            const totalTasks = document.querySelectorAll('.task-table tbody tr').length;
            const completedTasks = document.querySelectorAll('.status-done').length;
            const percentage = Math.round((completedTasks / totalTasks) * 100);
            
            // Update metrics if needed
            console.log(`Overall progress: ${percentage}%`);
        }

        // Call on page load
        updateOverallProgress();
    </script>
